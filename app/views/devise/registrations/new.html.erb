<div class="main">
  <section class="content-section text-center h100vh flex_cneter">
    <div class="ui segments login-box">
      <div class="ui horizontal segments login_tab_link_fix">
        <div class="ui segment">
          <%= link_to  new_session_path(resource_name) do %>
              <i class="fa fa-sign-in mr10" aria-hidden="true"></i>登入
          <% end %>
        </div>
        <div class="ui segment">

          <%= link_to omniauth_authorize_path(resource_name, resource_class.omniauth_providers.first) do %>
              <i class="fa fa-facebook-square mr10" aria-hidden="true"></i>Facebook 登入
          <% end %>
        </div>
      </div>
      <div class="ui form segment">
        <h5 class="bold mb10">註冊</h5>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.email_field :email, autofocus: true ,placeholder:t('devise.email')%>
            </div>

            <div class="field">
              <%= f.password_field :password, autocomplete: "off" , placeholder:t('devise.password')+"至少輸入八碼" %>
            </div>

            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:t('devise.password_confirm') %>
            </div>
            <div class="item pull-right mb20 mt20">
                <%= link_to '忘記密碼?', new_password_path(resource_name) ,class:"item black" %>
            </div>
            <div class="actions">
              <button type="submit" name="commit" class="ui button fluid red"><i class="fa fa-sign-in mr10" aria-hidden="true"></i>註冊</button>
            </div>
        <% end %>
      </div>
    </div>
  </section>
</div>

<style>
  .ui.segments{
    box-shadow:none;
  }
  .logo h1{
    color: #bc4c4c;
  }
  .nav_header .menu-item i,.nav_header .menu-item a{
    color: #787878;
  }
  .menu-item .cart_count,.footer{
    display: none !important;
  }
</style>