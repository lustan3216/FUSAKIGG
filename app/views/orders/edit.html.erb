<div class="main">
  <%= render 'order_header' %>

  <section class="content-section">
    <div class="container">
      <div class="row">
        <div class="col-sm-3">
          <%= render 'order_notice' %>
        </div>
        <div class="col-sm-9">
          <div class="ui segment order_product_form">
            <%= form_for @order do |f| %>
                <h4 class="ui dividing bold mb10"><%= t('form.info') %></h4>
                <div class="order_info">
                  <%= render 'order_info', order:@order %>
                  <% @order.line_items.each  do |item| %>
                      <%= render 'product',item:item %>
                  <% end %>
                </div>
                <%= render 'order_form',f:f %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </section>

</div>
<%= javascript_include_tag 'spinner_order' %>
<script>
  $('form').tw_citySelector('#county', '#district', '#postcode');
  $("#county").dropdown('set selected', "<%= @order.county %>");
  document.addEventListener("turbolinks:load", function() {
    $("#district").dropdown('set selected', "<%= @order.district %>");
  })
</script>
