<table class="body-wrap">
  <tr>
    <td></td>
    <td class="container" width="600">
      <div class="content">
        <table class="main" width="100%" cellpadding="0" cellspacing="0">
          <tr>
            <td class="alert alert-warning">FUSAKI 退貨訂單</td>
          </tr>
          <tr>
            <td class="content-wrap">
              <table width="100%" cellpadding="0" cellspacing="0">
                <tr>
                  <td class="aligncenter"><h3>24小時內會有專人與您聯絡退貨事宜</h3></td>
                </tr>
                <tr>
                  <td class="aligncenter red"><h4>專人確認後退貨商品請寄至<br><%= t('share.real_address') %></h4></td>
                </tr>
                <tr>
                  <td class="content-block">退貨成立時間: <%= @return_time %></td>
                </tr>
                <tr>
                  <td class="content-block">訂單編號: <%= @order_num %></td></tr>
                <tr>
                  <td class="content-block">姓名: <%= @user_name %></td>
                </tr>
                <tr>
                  <td class="content-block">電話: <%= @phone %></td>
                </tr>
                <tr>
                  <td class="content-block">信箱: <%= @email %></td>
                </tr>
                <tr>
                  <td class="content-block">備註: <%= @ps %></td>
                </tr>
                <tr>
                  <td class="content-block aligncenter">
                    <table class="invoice">
                      <tr>
                        <td>
                          <table class="invoice-items" cellpadding="0" cellspacing="0">
                            <% @return_items.each do |item| %>
                                <tr>
                                  <td><%= item.line_item.product.name + item.line_item.voltage %></td>
                                  <td class="aligncenter"><%= item.qty %>個</td>
                                  <td class="alignright">$<%= item.line_item.price %></td>
                                </tr>
                            <% end %>
                            <tr class="total">
                              <td>退款總額</td>
                              <td class="aligncenter"><%= @return_qty %>個</td>
                              <td class="alignright">$<%= @return_price %></td>
                            </tr>
                          </table>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
                <tr>
                  <td><a class="btn-primary" herf="<%= contact_url %>">聯絡客服</a></td>
                </tr>
              </table>
            </td>
          </tr>

        </table>
        <div class="footer">
          <table width="100%">
            <tr>
              <td class="aligncenter content-block"><a href="http://www.fusaki.com.tw">FUSAKI成為點亮家庭的第一步</a></td>
            </tr>
          </table>
        </div></div>
    </td>
    <td></td>
  </tr>
</table>