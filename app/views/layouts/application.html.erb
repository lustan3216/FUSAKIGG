<!DOCTYPE html>
<html>
<head>
  <title>FUSAKI</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-34158090-1', 'auto');
    ga('send', 'pageview');

  </script>
</head>
<body class="header-shadow">

<!-- ========== HEADER ========== -->
<div class="nav_header">
  <div class="container-fluid">

    <!-- ========== MENU ========== -->
    <nav class="menu">
      <div class="logo">
        <%= link_to root_path do  %>
            <h1>FUSAKI</h1>
        <% end %>
      </div> <!-- end logo -->
      <!-- ========== MAIN MENU ========== -->
      <ul class="main-menu">
        <li class="menu-item">
          <%= shopping_cart %>
        </li>
        <li class="menu-item">
          <%= link_to '購物', products_path %>
        </li>

        <li class="menu-item">

          <%= link_to '公司介紹', introduce_path %>
        </li>

        <li class="menu-item">
          <%= link_to '下載專區', download_path %>
        </li>

        <li class="menu-item">
          <%= link_to '問與答', qa_path %>
        </li>

        <li class="menu-item">
          <%= link_to '聯絡我們', new_service_message_path %>
        </li>
        <% if current_user  %>
            <li class="menu-item">
              <%= link_to '訂單/設定', orders_path(status:"outstanding") %>
        <% end %>
        <!-- Sub Menu -->
        </li> <!-- end menu-item -->

        <li class="menu-item">
          <% if current_user %>
              <%= link_to '登出', destroy_user_session_path, :method => :delete %>
          <% else %>
              <%= link_to '登入', new_session_path(:user) %>
          <% end %>
        </li>
      </ul> <!-- end main-menu -->
    </nav> <!-- end menu -->
  </div> <!-- end container-fluid -->
</div> <!-- end header -->
<%= yield %>

<%= render 'layouts/footer' %>
<%= render 'layouts/contact_us' %>

<style>
  .secondNav .nav_header .cart_count #current_qty{
    color: #fff;
    top: 5px;
  }
</style>
</body>
</html>
