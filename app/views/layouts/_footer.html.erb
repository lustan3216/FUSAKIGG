<!-- ==================================================
Footer: Classes
footer - Default footer
dark-footer - Dark footer [Use with .footer]
sticky-footer - Reveal footer on scroll
================================================== -->
<footer class="footer footer-style-3 dark-footer" id="footer">

  <div class="container footer-top">
    <div class="row">

      <!-- ========== left part ========== -->
      <div class="col-md-8 col-sm-8">
        <div class="vcenter mb20">
          <h2 class="mb10"><%= t("share.fusaki") %></h2>
          <div class=" clearfix">
            <p class="footer-desc">
              <%= t("share.footer_desc") %>
            </p>
          </div>
        </div> <!-- end vcenter -->
        <div class="col-md-3 col-sm-6">
          <h5 class="footer-title underline"><%= t(".company_feature") %></h5>
          <ul class="ul">
            <li><%= link_to "公司介紹",introduce_path %></li>
          </ul>
        </div> <!-- end col-md-3 -->
        <div class="col-md-3 col-sm-6">
          <h5 class="footer-title underline"><%= t(".qa") %></h5>
          <ul class="ul">
            <li><a href="#" class="trans">Website Design</a></li>
            <li><a href="#" class="trans">Web Development</a></li>
          </ul>
        </div> <!-- end col-md-3 -->
        <div class="col-md-3 col-sm-6">
          <h5 class="footer-title underline"><%= t(".download") %></h5>
          <ul class="ul">
            <li><%= link_to "牌價表下載區",download_path(anchor: "price_list"),class:"item" %></li>
            <li><%= link_to "目錄下載區",download_path(anchor: "categories"),class:"item" %></li>
            <li><%= link_to "線路圖下載區",download_path(anchor: "line_rules"),class:"item" %></li>
          </ul>
        </div> <!-- end col-md-3 -->
        <div class="col-md-3 col-sm-6">
          <h5 class="footer-title underline"><%= t(".buy_product") %></h5>
          <ul class="ul">
            <li><%= link_to "QT系列",products_path(type: "qt"),class:"item" %></li>
            <li><%= link_to "1T系列",products_path(type: "t1"),class:"item" %></li>
            <li><%= link_to "全系列開關",products_path(type: "switch"),class:"item" %></li>
            <li><%= link_to "全系列插座",products_path(type: "plug"),class:"item" %></li>
            <li><%= link_to "其他",products_path(type: "rest"),class:"item" %></li>
          </ul>
        </div> <!-- end col-md-3 -->
      </div> <!-- end col-md-8 -->

      <!-- ========== right part ========== -->
      <div class="col-md-4 col-sm-4">
        <h5 class="footer-title underline"><%= t("share.contact_us") %></h5>
        <h2><%=simple_format t("share.phone_number") %></h2>
        <h6 class="lowercase mt10 mb10"><%= t("share.email_address") %></h6>
        <p class="footer-desc address">
          <i class="icon fa fa-map-marker"></i>
          <%= t("share.real_address") %>
        </p> <!-- end footer-desc -->
      </div> <!-- end col-md-4 -->

    </div> <!-- end row -->
  </div> <!-- end footer-top -->

  <div class="footer-last">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          &copy; 2016 Make a Website
        </div>
        <div class="col-md-6 text-right">
          <a href="#" class="mr10">Terms of Use</a> <a href="#">Privacy Policy</a>
        </div>
      </div> <!-- end row -->
    </div> <!-- end container -->
  </div> <!-- end footer-last -->
</footer>
