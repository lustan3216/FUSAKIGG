<div class="main">
  <%= render 'order_header' %>
  <section class="content-section">
    <div class="container">
      <div class="row">

        <div class="col-sm-3">
          <%= render 'order_notice' %>
        </div>

        <div class="col-sm-9">
          <div class="ui segment order_product_form">
            <%= link_to edit_order_path(@order) do %>
                <div class="ui top right attached label"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> 修改</div>
            <% end %>
            <div class="row">
            <div class="mb30 col-xs-12 mt10">
              <h4 class="ui mb10">請選擇智付寶結帳方式</h4>
              <div class="col-sm-4 col-xs-6"><%= link_to "刷卡", checkout_pay2go_order_path(@order, :payment_method => "Credit"), :class => "ui button fluid", :method => :post %></div>
              <div class="col-sm-4 col-xs-6"><%= link_to "WebATM", checkout_pay2go_order_path(@order, :payment_method => "WebATM"), :class => "ui button fluid", :method => :post %></div>
              <div class="col-sm-4 col-xs-6"><%= link_to "ATM", checkout_pay2go_order_path(@order, :payment_method => "ATM"), :class => "ui button fluid", :method => :post %></div>
            </div>
            </div>
            <h4 class="ui dividing bold mb10"><%= t('form.info') %></h4>
            <div class="order_info">
              <%= render 'order_info'%>
              <% @order.line_items.each  do |item| %>
                  <%= render 'product',item:item %>
              <% end %>
            </div>
            <table class="ui definition table mt30">
              <tbody>
              <%= link_to edit_order_path(@order) do %>
                  <div class="ui top right attached label"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> 修改</div>
              <% end %>
              <tr>
                <td class="four wide column"><%= t('form.name') %></td>
                <td><%= @order.name %></td>
              </tr>
              <tr>
                <td><%= t('form.email') %></td>
                <td><%= @order.email %></td>
              </tr>
              <tr>
                <td><%= t('form.address') %></td>
                <td><%= @order.full_address %></td>
              </tr>
              <tr>
                <td><%= t('form.phone') %></td>
                <td><%= @order.phone %></td>
              </tr>
              <tr>
                <td><%= t('form.ship_time') %></td>
                <td><%= @order.ship_time %></td>
              </tr>
              <tr>
                <td><%= t('form.who_set') %></td>
                <td><%= @order.whoset %></td>
              </tr>
              <% if @order.ps.present? %>
                  <tr>
                    <td><%= t('form.ps') %></td>
                    <td><%= @order.ps %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>


