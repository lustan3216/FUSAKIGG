<table class="body-wrap">
  <tr>
    <td class="container" width="600">
      <div class="content">
        <table class="main" width="100%" cellpadding="0" cellspacing="0" itemprop="action" itemscope>
          <tr>
            <td class="content-wrap">
              <meta itemprop="name" content="Confirm Email"/>
              <table width="100%" cellpadding="0" cellspacing="0">
                <tr>
                  <td class="content-block"><h3 class="red">【<%= @message.problem %>】客服訊息</h3></td>
                </tr>
                <tr>
                  <td class="content-block">
                    寄送時間: <%= @message_time %>
                  </td>
                </tr>
                <tr>
                  <td class="content-block">
                    姓名: <%= @message.name %>【<%= @sign_up_or_not %>】
                  </td>
                </tr>
                <tr>
                  <td class="content-block">
                    電話: <%= @message.phone %>
                  </td>
                </tr>
                <tr>
                  <td class="content-block">
                    信箱: <%= @message.email %>
                  </td>
                </tr>
                <tr>
                  <td class="content-block">
                    內容: <%= @message.message %>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
        <div class="footer aligncenter">
          <table width="100%" >
            <h6 class="ml10 mt15"><%= t("share.phone_number") %></h6>
            <h6 class="ml10 lowercase mt15"><%= t("share.email_address") %></h6>
          </table>
        </div>
      </div>
    </td>
  </tr>
</table>