<!-- ========== MAIN ========== -->
<div class="main">

  <!-- ========== PAGE TITLE ========== -->
  <div class="page-title-div gradient-bg" >
    <div class="container">
      <div class="row page-title-row">
        <div class="col-md-6 col-sm-6">
          <h1 class="page-title">Shop Details</h1>
          <p>One stop solution for a stunning website.</p>
        </div> <!-- end col-md-6 -->

        <div class="col-md-6 col-sm-6 hidden-xs">
          <ol class="breadcrumb pull-right border-0">
            <li><a href="#" class="trans">Home</a></li>
            <li><a href="#" class="trans">Shop</a></li>
            <li><a href="#" class="active trans">Details</a></li>
          </ol>
        </div> <!-- end col-md-6 -->
      </div> <!-- end page-title-row -->
    </div> <!-- end container -->
  </div>

  <!-- ========== CONTENT SECTION ========== -->
  <section class="content-section">
    <div class="container">
      <div class="row">
        <div class="col-sm-3">
          <%= render "sidebar" %>
        </div> <!-- end col-md-3 -->

        <div class="col-sm-9">
          <table class="ui single line table">
            <thead>
            <tr>
              <th class="">訂單編號</th>
              <th class="">地址</th>
              <th class="">電話</th>
              <th class="">退貨申請時間</th>
              <th class="">結帳方式</th>
              <th class="">狀態</th>
              <th class="">內容</th>
            </tr>
            </thead>
            <tbody>
            <% @return_orders.each  do |return_order| %>
                <tr>
                  <td><%= return_order.order.order_number %></td>
                  <td><%= return_order.order.full_address %></td>
                  <td><%= return_order.phone %></td>
                  <td><%= return_order.updated_at.strftime('%x') %></td>
                  <td><%= return_order.order.payment.payment_method %></td>
                  <td><%= "已完成" if return_order.status == "ok" %></td>
                  <td><a href="<%= new_user_return_order_path(current_user,id: return_order.order) %>"><i class="fa fa-search" aria-hidden="true"></i></a></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div> <!-- end row -->
    </div> <!-- end container -->
    <div class="paginator">
      <%= paginate @return_orders %>
    </div>
  </section> <!-- end content-section -->

</div> <!-- end main -->
<%= render "welcome/footer" %>

<script type="text/javascript" charset="utf-8">
  $("tr[data-link]").click(function() {
    window.location =  $(this).data("link")
  })
</script>
